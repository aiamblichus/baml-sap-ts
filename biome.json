{
  "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "useConst": "error",
        "useNodejsImportProtocol": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noControlCharactersInRegex": "off",
        "noEmptyInterface": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "tab",
    "indentWidth": 3,
    "lineWidth": 120
  },
  "files": {
    "includes": [
      "src/**/*.ts",
      "tests/**/*.ts",
      "!**/node_modules/**/*",
      "!!**/node_modules"
    ]
  }
}
